<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        android:weightSum="1"
        android:padding="3dp"
        >
        <ImageView
            android:id="@+id/imatgeUsuari"
            android:layout_width="20pt"
            android:layout_height="20pt"
            android:layout_gravity="center"
            android:contentDescription="@string/userPicture"
            android:layout_weight="0.1"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:layout_weight="0.85">

            <TextView
                android:id="@+id/textComentari"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@id/imatgeUsuari"
                android:textSize="8pt"
                android:typeface="sans" />

            <TextView
                android:id="@+id/nomUsuari"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dip"
                android:textColor="#343434"
                android:textSize="6pt" />

            <TextView
                android:id="@+id/dataComentari"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#343434"
                android:textSize="6pt" />
        </LinearLayout>

        <ImageButton
            android:id="@+id/esborrarComentari"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@null"
            android:contentDescription="@string/boto_per_esborrar_el_comentari"
            android:scaleType="fitXY"
            android:padding="3dp"
            app:srcCompat="@drawable/ic_action_delete3"
            android:layout_weight="0.05"/>

    </LinearLayout>

</RelativeLayout>