<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="edu.upc.pes.wallachange.MakeOfferFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginLeft="5pt"
        android:layout_marginRight="5pt"
        android:layout_marginTop="5pt"
        android:orientation="vertical">
        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TableRow android:weightSum="2">
                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="2pt"
                        android:text="@string/offerExchange1_eng"
                        android:gravity="center"
                        android:textSize="12pt"
                        android:textStyle="bold"/>
                    <ImageView
                        android:id="@+id/item_image_1"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        app:srcCompat="@drawable/empty_picture" />
                    <TextView
                        android:id="@+id/item_title_1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2pt"
                        android:gravity="center"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="10pt" />
                    <TextView
                        android:id="@+id/item_temporal_1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:textSize="8pt" />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="2pt"
                        android:text="@string/offerExchange2_eng"
                        android:gravity="center"
                        android:textSize="12pt"
                        android:textStyle="bold" />
                    <ImageView
                        android:id="@+id/item_image_2"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        app:srcCompat="@drawable/empty_picture" />
                    <TextView
                        android:id="@+id/item_title_2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2pt"
                        android:gravity="center"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="10pt" />
                    <TextView
                        android:id="@+id/item_temporal_2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:textSize="8pt" />

                </LinearLayout>
            </TableRow>
        </TableLayout>

        <Button
            android:id="@+id/make_offer_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/offerExchangeSend_eng"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/offerExchangeElement_eng"
            android:textSize="12pt"
            android:textAlignment="center"
            android:textStyle="bold" />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray"/>
        <ListView
            android:id="@+id/see_your_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </ListView>
    </LinearLayout>

</FrameLayout>
