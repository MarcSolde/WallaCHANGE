<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="edu.upc.pes.wallachange.ViewElementFragment"
    android:layout_height="match_parent"
    >
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5pt"
            android:layout_marginLeft="5pt"
            android:layout_marginRight="5pt"
            android:layout_marginTop="5pt"
            android:gravity="center"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                >

                <EditText
                    android:id="@+id/titolAnunci"
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:background="@android:color/transparent"
                    android:inputType="text"
                    android:maxLines="1"
                    android:textAlignment="center"
                    android:textColor="@drawable/edit_text_selector"
                    android:textAppearance="@style/TextAppearance.AppCompat.Large"
                    tools:ignore="LabelFor" />

                <ImageButton
                    android:id="@+id/botoEditar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_margin="5dp"
                    app:srcCompat="@drawable/ic_action_edit"
                    android:background="@null"
                    android:contentDescription="@string/edit_button_eng"/>

                <ImageButton
                    android:id="@+id/botoGuardar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_margin="5dp"
                    app:srcCompat="@android:drawable/ic_menu_save"
                    android:background="@null"
                    android:visibility="gone"
                    android:contentDescription="@string/save_button_eng"/>
            </RelativeLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/createdByTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/created_by_eng"
                    android:gravity="start" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="end"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textViewDurada"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/duration_eng" />

                    <EditText
                        android:id="@+id/temporalitat"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@android:color/transparent"
                        android:inputType="text"
                        android:maxLines="1"
                        android:textSize="14sp"
                        android:textAlignment="textEnd"
                        tools:ignore="LabelFor"
                        android:textColor="@drawable/edit_text_selector"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/previousButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/tw__transparent"
                    android:tint="@color/colorPrimary2"
                    app:srcCompat="@android:drawable/ic_media_previous"
                    android:contentDescription="@string/boto_de_la_imatge_anterior"/>
                <ImageView
                    android:layout_width="100pt"
                    android:layout_height="100pt"
                    android:id="@+id/imageViewFoto"/>

                <ImageButton
                    android:id="@+id/nextButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/tw__transparent"
                    android:tint="@color/colorPrimary2"
                    app:srcCompat="@android:drawable/ic_media_next"
                    android:contentDescription="@string/boto_de_la_imatge_posterior"/>

            </LinearLayout>
            <EditText
                android:id="@+id/editTextDescripcio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textAlignment="center"
                android:textSize="8pt"
                android:background="@drawable/description_border"
                android:hint="@string/description_eng"
                tools:ignore="LabelFor"
                android:textColor="@drawable/edit_text_selector"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/category_eng"
                    android:textSize="8pt"
                    android:textStyle="bold"
                    android:layout_weight="0.43"
                    android:id="@+id/textViewCategoria"/>

                <EditText
                    android:id="@+id/categoria"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="@string/advertisements_category_eng"
                    android:inputType="textPersonName"
                    android:maxLines="1"
                    android:maxLength="25"
                    android:layout_weight="0.37"/>

                <ImageView
                    android:id="@+id/botoAfegirCategoria"
                    android:layout_width="15pt"
                    android:layout_height="15pt"
                    android:layout_gravity="center_vertical"
                    android:contentDescription="@string/add_category"
                    android:scaleType="fitXY"
                    app:srcCompat="@drawable/ic_action_add"
                    />
            </LinearLayout>

            <edu.upc.pes.wallachange.Others.ExpandableHeightGridView
                android:id="@+id/gridCategories"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_marginEnd="10pt"
                android:layout_marginStart="5pt"
                android:horizontalSpacing="5dp"
                android:isScrollContainer="false"
                android:stretchMode="columnWidth"
                android:verticalSpacing="5dp"
                android:gravity="end"/>

            <LinearLayout
                android:id="@+id/botons_cancel_save"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:orientation="horizontal"
                android:weightSum="1">

                <Button
                    android:id="@+id/tradeButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/trade_eng" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/editTextComment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="4.97"
                    android:ems="10"
                    android:hint="@string/write_here_your_comment_eng"
                    android:textAlignment="textStart"
                    android:maxLines="1"/>
                <!-- android:singleLine="true" -->

                <ImageButton
                    android:id="@+id/writeComment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:background="@color/tw__transparent"
                    android:contentDescription="@string/boto_per_enviar_comentari"
                    android:scaleType="fitCenter"
                    android:tint="@color/colorPrimary"
                    app:srcCompat="@android:drawable/ic_menu_send" />
            </LinearLayout>

                <edu.upc.pes.wallachange.Others.ExpandableHeightGridView
                    android:id="@+id/comments_list"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:horizontalSpacing="5dp"
                    android:isScrollContainer="false"
                    android:stretchMode="columnWidth"
                    android:paddingBottom="5dp"
                    android:paddingEnd="5dp"
                    android:paddingStart="5dp"
                    android:verticalSpacing="5dp"
                    />
        </LinearLayout>
    </ScrollView>
</FrameLayout>