<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5pt"
        android:layout_marginBottom="5pt"
        android:layout_marginRight="5pt"
        android:layout_marginTop="5pt"
        android:orientation="vertical"
        android:scrollbars="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="start|center_horizontal"
            android:orientation="horizontal">


            <EditText
                android:id="@+id/finder"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.6"
                android:singleLine="true"
                android:hint="@string/search_eng" />



            <ImageView
                android:id="@+id/cleanFieldSearch"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.08"
                android:contentDescription="@string/clearEditText"
                app:srcCompat="@drawable/ic_action_delete" />

            <ImageView
                android:id="@+id/SearchButt"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.08"
                android:contentDescription="@string/clearEditText"
                app:srcCompat="@drawable/search"/>


        </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="40px"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/filterButton"
            android:layout_width="wrap_content"
            android:layout_height="37dp"
            android:background="@drawable/border"
            android:text="@string/filter_eng"
            android:textColor="#606060"
            />


    </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="92dp"
                android:layout_height="wrap_content"
                android:layout_weight="2.55"
                android:text="@string/max_distance_from_you_eng"
                android:layout_gravity="center"/>

            <EditText
                android:id="@+id/editTextKmFromYou"
                android:layout_width="74dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"/>

            <CheckBox
                android:id="@+id/checkBoxClosestProducts"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:text="@string/closest_products_eng"
                />
        </LinearLayout>

        <ListView
            android:id="@+id/listElements"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />


    </LinearLayout>
</FrameLayout>