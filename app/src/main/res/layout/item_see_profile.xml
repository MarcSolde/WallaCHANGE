<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="5pt"
    android:layout_marginEnd="5pt"
    android:layout_marginStart="5pt"
    android:layout_marginTop="5pt"
    android:orientation="horizontal"
    android:weightSum="1">

    <ImageView
        android:id="@+id/item_see_profile_image"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:srcCompat="@drawable/empty_picture" />

    <LinearLayout
        android:layout_width="269dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="5pt"
        android:layout_marginTop="2pt"
        android:orientation="vertical">

        <TextView
            android:id="@+id/item_see_profile_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2pt"
            android:text="TextView"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="10pt" />

        <TextView
            android:id="@+id/item_see_profile_category"
            android:textColor="@color/colorPrimary3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2pt"
            android:text="TextView"
            android:textSize="8pt" />

        <TextView
            android:id="@+id/item_see_profile_temporal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2pt"
            android:text="TextView"
            android:textSize="8pt" />
    </LinearLayout>
</LinearLayout>