<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="5pt"
        android:layout_marginLeft="5pt"
        android:layout_marginRight="5pt"
        android:layout_marginTop="5pt"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40pt"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageUserPicture"
                    android:layout_width="35pt"
                    android:layout_height="35pt"
                    android:layout_marginRight="2pt"
                    android:scaleType="fitXY"
                    app:srcCompat="@mipmap/ic_userpicture" />

                <EditText
                    android:id="@+id/editTextUsername"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="@string/username_eng"
                    android:inputType="textPersonName" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginBottom="5pt"
                android:layout_marginTop="5pt"
                android:background="@android:color/darker_gray" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40pt"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/editTextCity"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="2pt"
                    android:layout_weight="1"
                    android:hint="@string/city_eng"
                    android:inputType="textPersonName" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginBottom="5pt"
                android:layout_marginTop="5pt"
                android:background="@android:color/darker_gray" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40pt"
                android:layout_marginBottom="2pt"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:weightSum="1">

                <EditText
                    android:id="@+id/addPreference"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="@string/preference_eng"
                    android:inputType="textPersonName"
                    android:layout_weight="1.00" />

                <ImageView
                    android:id="@+id/imageAddButton"
                    android:layout_width="15pt"
                    android:layout_height="15pt"
                    android:scaleType="fitXY"
                    app:srcCompat="@drawable/ic_add" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginBottom="5pt"
                android:layout_marginTop="5pt"
                android:background="@android:color/darker_gray" />

            <ListView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="2pt"
                android:layout_weight="1" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40pt"
                android:layout_marginBottom="2pt"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/seeRating"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/rating_eng"
                    android:textSize="9pt" />


                <RatingBar
                    android:id="@+id/ratingBar"
                    style="?attr/ratingBarStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:numStars="5"
                    android:rating="3"
                    android:stepSize="1"
                    android:theme="@style/RatingBar" />


            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginBottom="5pt"
                android:layout_marginTop="5pt"
                android:background="@android:color/darker_gray" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40pt"
                android:layout_marginBottom="2pt"
                android:layout_weight="1"
                android:gravity="right"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/submitButton"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="@string/createProfile_eng" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
</FrameLayout>