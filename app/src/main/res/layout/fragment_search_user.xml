<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="edu.upc.pes.wallachange.SearchUserFragment">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="5pt"
        android:layout_marginRight="5pt"
        android:layout_marginTop="5pt"
        android:orientation="vertical"
        android:scrollbars="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="start|center_horizontal"
            android:orientation="horizontal">

            <AutoCompleteTextView
                android:id="@+id/search_user_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:lines="1"
                android:singleLine="true" />
    <!--
            <EditText
                android:id="@+id/search_user_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:lines="1"
                android:singleLine="true" />
    -->
            <ImageButton
                android:id="@+id/search_user_reset"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.08"
                android:background="@null"
                android:contentDescription="@string/clearEditText"
                app:srcCompat="@drawable/ic_action_delete" />
            <ImageButton
                android:id="@+id/search_user_search"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.08"
                android:background="@null"
                android:contentDescription="@string/searchButton_eng"
                app:srcCompat="@drawable/ic_action_search"/>
        </LinearLayout>
        <RadioGroup
            android:id="@+id/search_user_radio_group"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:checkedButton="@+id/search_user_radio_user"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/search_user_radio_user"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/search_by_user" />

            <RadioButton
                android:id="@+id/search_user_radio_pref"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/search_by_pref" />
        </RadioGroup>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="5pt"
            android:layout_marginBottom="5pt"
            android:background="@android:color/darker_gray"/>
        <ListView
            android:id="@+id/search_user_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>

</FrameLayout>
